
<ManipulationRecycleViewRow>:
    orientation: 'vertical'
    size_hint_y: 2
    GridLayout:
        rows: 1
        cols: 2
        InfoLabel:
            font_size: 30
            text: root.kind #+ str(self.parent.parent.ids.startend.values_pos)  + str(self.parent.parent.ids.startend.last_click)
        AnnotationCheckBox:
            id : active_or_not
            active: root.able
    AnnotationSlider:
        id: start
        min: 0
        max: root.length
        value: root.start
        step: 1
        orientation: 'horizontal'
    AnnotationSlider:
        id: end
        min: 0
        max: root.length
        value: root.end
        step: 1
        orientation: 'horizontal'
