#        id: startend
#        values: [root.start, root.end]
#        max: root.length
#        min: 0
#       heigth: root.height
#        width: root.width
#        step: 1


<AnnotationManipulationRow>:
    orientation: 'horizontal'
    InfoLabel:
        text: root.kind
        font_size: 25
    AnnotationManipulationButton:
        text: "+"
        font_size: 30
        on_press: root.more_annotation_of(root.kind)
    AnnotationManipulationButton:
        text: "-"
        font_size: 30
        on_press: root.less_annotation_of(root.kind)

<SliderView>:
    scroll_type: ['bars', 'content']
    bar_width: 25
    viewclass: 'ManipulationRecycleViewRow'
    RecycleBoxLayout:
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        default_size: dp(2656), dp(156)
        height: self.minimum_height
        orientation: 'vertical'

<AnnotationManipulationView>:
    viewclass: 'AnnotationManipulationRow'
    RecycleGridLayout:
        rows:2
        cols:3
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'horizontal'

<Manipulation_Screen>:
    GridLayout:
        rows:16
        cols:1
        ScrollView:
            size_hint_y: 6
            InfoLabel:
                halign: "center"
                valign: "middle"
                markup: True
                size_hint_y: 1
                text_size: self.size
                multiline: True
                id: sample
                text: "sample"
                font_size: 40
        SliderView:
            id: spansliderview
            size_hint_y: 6.5
            data: [{'text':'a', 'id':'0'}, {'text':'b', 'id':'1'}]
        AnnotationManipulationView:
            id: annotationmanipulationview
            size_hint_y: 1
            data: [{'kind': 'CONTRAST'}, {'kind':'SUBJECT'},  {'kind':'ASPECT'},  {'kind':'CONTRAST_MARKER'},  {'kind':'SUBJECT_EXCEPT'}, {'kind':'COMPARISON_MARKER'}]

        NavButton:
            text: "ok"
            on_press: root.manager.ok()
            background_normal: "./images/annotate_icon.png"
        NavButton:
            text: "trash"
            background_normal: "./images/ignore.jpg"
            on_press: root.manager.shit()
