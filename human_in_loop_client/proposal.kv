<ProposalView>:
    scroll_type: ['bars']
    bar_width: 25
    viewclass: 'ProposalRecycleViewRow'
    RecycleBoxLayout:
        rows:20
        cols:1
        default_size: None, dp(560)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<ProposalRecycleViewRow>:
    orientation: 'vertical'
    size_hint_y: 2
    GridLayout:
        rows:2
        cols:1
        InfoLabel:
            halign: "justify"
            valign: "middle"
            markup: True
            size_hint_y: 4.5
            text_size: self.size
            multiline: True
            id: sample
            text: "sample"
            font_size: 50 if not print ("text_len", len(root.annotation)) and len(root.annotation) < 150 else  (150/len(root.annotation))**0.5 * 40
            text: app.root.upmarker.markup(root.annotation)
        BoxLayout:
            InfoLabel:
                font_size: 40
                text: str(root.no) #''#str(root.children.index(self)) if self in root.children else "not in list"
            NavButton:
                on_press:     app.root.ok(proposal=root)
                background_normal: "./images/annotate_icon.png"
            NavButton:
                on_press: app.root.zero_annotation_selection(proposal=root)
                background_normal: "./images/zero_annotation.jpg"
            NavButton:
                on_press: app.root.delete(proposal=root)
                background_normal: "./images/ignore.jpg"
            NavButton:
                on_press: app.root.go_manipulating(proposal=root)
                background_normal: "./images/manipulate.jpg"
            InfoLabel:
                text: ""


