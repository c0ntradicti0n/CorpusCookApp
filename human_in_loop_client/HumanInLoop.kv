# Colors
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<NavButton@Button+BackgroundColor>
    size_hint: None, None
    size: (100,100)
    background_color: 1,1,1,1
    foreground_color: 0.3, 0.4, 0.5, 1
    color: 1, 1, 1, 1

<AnnotationSlider@SpanSlider+BackgroundColor>
    pos_hint: {'center_x': .5, 'center_y': .5}
    color:0.5,0.5,0.5,0.5
    background_color: 0.4, 0.6, 0.8, 1
    foreground_color: 0.3, 0.4, 0.5, 1
    value_track_width: 1

<AnnotationManipulationButton@Button+BackgroundColor>
    background_color: 0.7, 0.6, 0.8, 1
    foreground_color: 0.6, 0.4, 0.5, 1
    color: 1, 1, 1, 1

<AnnotationCheckBox@CheckBox+BackgroundColor>
    foreground_color: 1, 1, 1, 1
    color: 0.0, 0.1, 0.1, 1

<InfoLabel@Label+BackgroundColor>
    halign: "center"
    color: 0.0, 0.1, 0.1, 1

# Things
<RootWidget>:
    id: Main
    MultiMedia_Screen:
        id:    multim
        name:  "MultiMedia_Screen"
    Sample_Screen:
        id:    sample
        name:  "Sample_Screen"
    Proposal_Screen:
        id:    proposals
        name:  "Proposal_Screen"
    Annotation_Screen:
        id:    annot
        name:  "Annotation_Screen"
    Manipulation_Screen:
        id:    manip
        name:  "Manipulation_Screen"


#:include human_in_loop_client/annotation.kv
#:include human_in_loop_client/manipulation.kv
#:include human_in_loop_client/sample.kv
#:include human_in_loop_client/proposal.kv
