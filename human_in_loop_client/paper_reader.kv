<MultiMedia_Screen>:
    GridLayout:
        rows: 1
        cols: 2
        GridLayout:
            size_hint_x:0.96
            rows: 4
            cols: 1
            TextInput:
                id: address
                text: "http://isiarticles.com/bundles/Article/pre/pdf/4129.pdf"
                multiline: False
                size_hint_y: 0.1
            Button:
                text: "read"
                on_press: root.manager.load_something()
                size_hint_y: 0.1
            InfoLabel:
                halign: "justify"
                valign: "middle"
                markup: True
                text_size: self.size
                multiline: True
                id: editor
                text: "sample"
                font_size: 18
                size_hint_y: 0.7
            Button:
                text: "ok"
                on_press: root.manager.analyse_paper()
                size_hint_y: 0.1
        BoxLayout:
            size_hint_x:.04
            orientation:'vertical'
            NavButton:
                background_normal: "./images/pdf.png"
                on_press: app.root.load_mm()
                text: "pdf etc."
                size: (self.parent.width, self.parent.width)
            NavButton:
                background_normal: "./images/next.png"
                on_press: app.root.next_page()
                text: "next"
                size: (self.parent.width, self.parent.width)





